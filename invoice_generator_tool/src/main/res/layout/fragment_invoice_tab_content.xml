    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/invoice_card_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingStart="7dp"
            android:paddingBottom="7dp"
            android:paddingEnd="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/invoice_pink">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/listOfNumbers"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/lexend_medium"
                        android:text="1"
                        android:textColor="@color/invoice_white"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="normal" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer Name"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:fontFamily="@font/lexend_medium"
                            android:textColor="@color/invoice_black"/>
                        <ImageView
                            android:id="@+id/menuIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_gravity="end"
                            android:src="@drawable/invoice_dot_menu_icon"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business name :"
                                android:layout_alignParentStart="true"
                                android:textSize="12dp"
                                android:fontFamily="@font/lexend_medium"
                                android:textColor="@color/invoice_peack_green"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvBusinessName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="2dp"
                                android:textSize="12dp"
                                android:fontFamily="@font/lexend_medium"
                                android:textColor="@color/invoice_black"/>
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 1000"
                            android:textSize="17dp"
                            android:layout_marginEnd="5dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/lexend_medium"
                            android:textColor="@color/invoice_black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2dp">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Invoice no :"
                                    android:layout_alignParentStart="true"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/lexend_medium"
                                    android:textColor="@color/invoice_peack_green"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/InvoiceNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inv2025-01"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="2dp"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/lexend_medium"
                                    android:textColor="@color/invoice_black"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Invoice Date :"
                                    android:layout_alignParentStart="true"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/lexend_medium"
                                    android:textColor="@color/invoice_peack_green"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvCreatedOn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25-01-2025"
                                    android:layout_marginStart="5dp"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/lexend_medium"
                                    android:textColor="@color/invoice_black"/>


                            </LinearLayout>
                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid"
                            android:layout_gravity="end|center"
                            android:gravity="end|center"
                            android:layout_marginEnd="5dp"
                            android:textSize="12dp"
                            android:fontFamily="@font/lexend_medium"
                            android:textColor="@color/invoice_black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="7dp"
                        android:layout_gravity="end"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/removeItem"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/invoice_delete_icon"/>

                        <ImageView
                            android:id="@+id/itemEdit"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/invoice_edit_icon"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>




            <androidx.cardview.widget.CardView
                android:id="@+id/InvoiceDateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="@color/invoice_lite_green"
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/InvoiceDueStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_medium"
                    android:paddingStart="6dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="5dp"
                    android:text="Due in 2 days"
                    android:textColor="@color/invoice_green"
                    android:textSize="12dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>