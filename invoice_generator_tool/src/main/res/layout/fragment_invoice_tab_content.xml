<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/invoice_textfield_background"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Amount and Due Status -->
            <RelativeLayout
                android:id="@+id/AmountRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/InvoiceAmountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="6dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="5dp"
                        android:text="Amount"
                        android:textColor="@color/invoice_pink"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/InvoiceAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 65,400"
                        android:fontFamily="@font/lexend_medium"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/InvoiceDateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="@color/invoice_lite_green"
                    app:cardCornerRadius="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/InvoiceDueStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="6dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="5dp"
                        android:text="Due in 2 days"
                        android:textColor="@color/invoice_green"
                        android:textSize="12dp" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Invoice Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Invoice no"
                    android:fontFamily="@font/lexend_medium"
                    android:textColor="@color/invoice_pink"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Created on"
                    android:fontFamily="@font/lexend_medium"
                    android:textColor="@color/invoice_pink"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status"
                    android:fontFamily="@font/lexend_medium"
                    android:textColor="@color/invoice_pink"
                    android:textSize="12dp" />
            </LinearLayout>

            <!-- Invoice Values -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/InvoiceNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NA#OM12"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/lexend_medium"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tvCreatedOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="07/02/2025"
                        android:fontFamily="@font/lexend_medium"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lexend_medium"
                        android:text="Unpaid"
                        android:textColor="@color/invoice_black"
                        android:textSize="13dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/invoice_lite_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- User Name -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Dhivya"
                    android:layout_weight="1"
                    android:textColor="@color/invoice_black"
                    android:fontFamily="@font/lexend_medium"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/invoice_right_arrow" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>