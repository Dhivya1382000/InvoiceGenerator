<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/invoice_textfield_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- User Avatar -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/invoice_pink">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/listOfNumbers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/lexend_medium"
            android:text="1"
            android:textColor="@color/invoice_white"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>


    <!-- Customer Details -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/invoiceCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:fontFamily="@font/lexend_medium"
            android:textSize="15dp"
            android:textColor="@color/invoice_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/invoiceCustomerMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Details"
            android:layout_marginTop="5dp"
            android:textColor="@color/invoice_black"
            android:fontFamily="@font/lexend_medium"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>
