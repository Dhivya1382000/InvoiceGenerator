<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Title -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lexend_medium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Select Date Filter"
            android:textAlignment="center"
            android:textColor="@color/invoice_pink"
            android:textSize="17dp"
            android:textStyle="bold" />
        <!-- Radio Group with 7 options -->
        <RadioGroup
            android:id="@+id/radioGroupOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/invoice_black" />

            <RadioButton
                android:id="@+id/yesterdayOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:text="Yesterday" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/invoice_black" />

            <RadioButton
                android:id="@+id/todayOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/lexend_medium"
                android:paddingBottom="5dp"
                android:text="Today" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/invoice_black" />

            <RadioButton
                android:id="@+id/lastWeekOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="Last Week" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/invoice_black" />

            <RadioButton
                android:id="@+id/thisWeekOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="This Week" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/invoice_black" />

            <RadioButton
                android:id="@+id/lastMonthOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="Last Month" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/invoice_black" />

            <RadioButton
                android:id="@+id/thisMonthOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp"
                android:text="This Month" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/invoice_black" />

             <RadioButton
                 android:id="@+id/CustomOption"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Custom"
                 android:fontFamily="@font/lexend_medium"
                 android:paddingTop="5dp"
                 android:paddingStart="5dp"
                 android:paddingEnd="5dp"
                 android:paddingBottom="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:paddingBottom="10dp"
                android:background="@color/invoice_black"
                android:visibility="gone"/>

        </RadioGroup>
        <androidx.cardview.widget.CardView
            android:id="@+id/filterSubmitCard"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/invoice_blue"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
              android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/invoice_white"
                android:fontFamily="@font/lexend_medium"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
