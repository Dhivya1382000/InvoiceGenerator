<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.nithra.invoice_generator_tool.viewmodel.InvoiceViewModel" />
    </data>

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.InvoiceBusinessDetailFormActivity"
        android:orientation="vertical"
        android:background="@color/invoice_white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/invoice_white"
            android:elevation="0dp"
            android:gravity="center"
            app:title="New Invoice"
            app:titleTextAppearance="@style/ToolbarTitleStyle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolBarTitle"
            android:layout_above="@+id/InvoiceBusinessSaveCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/InvoiceBusinessTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceBusinessTypeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingStart="5dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingEnd="5dp"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Business Details"
                            android:text=""
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceBusinessChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:paddingStart="5dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingEnd="5dp"
                            android:fontFamily="@font/lexend_medium"
                            android:text="Change"
                            android:textColor="@color/invoice_pink"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Business Details *"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceCustomerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Business Id"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceCustomerAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:background="@null"
                            android:paddingStart="5dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingEnd="5dp"
                            android:fontFamily="@font/lexend_medium"
                            android:text="Add"
                            android:textColor="@color/invoice_pink"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="CustomerDetail*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceIncreNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Invoice No"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Invoice No*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceOrderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Order Id"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Order Id*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Invoice Date"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Invoice Date*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/InvoiceBusinessSaveCard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/invoice_blue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:fontFamily="@font/lexend_medium"
                android:textSize="15dp"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/invoice_white"/>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>

