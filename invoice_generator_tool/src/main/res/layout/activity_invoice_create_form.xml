                    android:id="@+id/InvoiceDueDateLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/InvoiceDueDateEditLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceDueDateEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="DD-MM-YYYY"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/invoice_datepicker_icon" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Due Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/InvoiceRemarkLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceRemarkEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Remark for customer"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Remark for customer"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/InvoiceTermsAndCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceTermsAndConditionEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Terms And Condition"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Terms And Condition"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/InvoiceSubmitLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/invoice_blue"
                app:cardCornerRadius="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/InvoiceGeneratePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/invoice_white"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_medium"
                        android:gravity="center"
                        android:paddingStart="35dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="35dp"
                        android:paddingBottom="10dp"
                        android:text="Preview"
                        android:textColor="@color/invoice_blue"
                        android:textSize="15dp" />


                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/InvoiceGenerateSaveCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/invoice_blue"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_medium"
                    android:gravity="center"
                    android:paddingStart="35dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="35dp"
                    android:paddingBottom="10dp"
                    android:text="Generate"
                    android:textColor="@color/invoice_white"
                    android:textSize="15dp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</layout>

