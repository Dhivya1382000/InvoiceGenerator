<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.nithra.invoice_generator_tool.viewmodel.InvoiceViewModel" />
    </data>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/invoice_white"
        android:orientation="vertical"
        tools:context=".activity.InvoiceBusinessDetailFormActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/invoice_white"
            android:elevation="0dp"
            android:gravity="center"
            app:title="New Invoice"
            app:titleTextAppearance="@style/ToolbarTitleStyle" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/InvoiceBusinessSaveCard"
            android:layout_below="@+id/toolBarTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/InvoiceBusinessTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceBusinessTypeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Business Details"
                            android:paddingStart="5dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="7dp"
                            android:text=""
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceBusinessChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:paddingStart="5dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="7dp"
                            android:text="Change"
                            android:textColor="@color/invoice_pink"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Business Details *"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceCustomerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Business Id"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/InvoiceCustomerAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:paddingStart="5dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="7dp"
                            android:text="Add"
                            android:textColor="@color/invoice_pink"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="CustomerDetail*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceIncreNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Invoice No"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Invoice No*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceOrderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Order Id"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Order Id*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_textfield_background"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/InvoiceDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/lexend_medium"
                            android:hint="Invoice Date"
                            android:inputType="textCapSentences"
                            android:padding="15dp"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/invoice_white"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Invoice Date*"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/invoice_lite_blue"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_medium"
                            android:text="Item List"
                            android:textStyle="bold"
                            android:textColor="@color/invoice_black"
                            android:textSize="15dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:padding="5dp"
                            app:cardBackgroundColor="@color/invoice_blue"
                            app:cardCornerRadius="4dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:cardBackgroundColor="@color/invoice_lite_blue"
                                app:cardCornerRadius="4dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/AddInvoiceText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lexend_medium"
                                    android:padding="5dp"
                                    android:text="+ Add Invoice Items"
                                    android:textColor="@color/invoice_blue"
                                    android:textSize="12dp" />
                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!--<LinearLayout
                        android:id="@+id/dynamicContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:background="@color/invoice_blue">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/invoice_white"
                                    android:text="S.no/Items"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/lexend_medium"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/invoice_white"
                                    android:text="Qty"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:fontFamily="@font/lexend_medium"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/invoice_white"
                                    android:text="Amount"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/lexend_medium"/>



                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dynamicContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/InvoiceBusinessSaveCard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/invoice_blue"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:gravity="center"
                android:paddingStart="35dp"
                android:paddingTop="10dp"
                android:paddingEnd="35dp"
                android:paddingBottom="10dp"
                android:text="Save"
                android:textColor="@color/invoice_white"
                android:textSize="15dp" />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>

