<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/invoiceItemNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/invoice_black"
                android:fontFamily="@font/lexend_medium"
                android:text="1"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/invoice_black"
                    android:fontFamily="@font/lexend_medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Ugar"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvItemQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/invoice_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:fontFamily="@font/lexend_medium"
                    android:text="1 Kgs"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvItemRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/invoice_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:fontFamily="@font/lexend_medium"
                    android:text="1 Kgs"
                    android:textSize="12dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:id="@+id/itemSGstSplit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/invoice_black"
                        android:fontFamily="@font/lexend_medium"
                        android:text=""
                        android:textSize="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/itemCGstSplit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/invoice_black"
                        android:fontFamily="@font/lexend_medium"
                        android:text=""
                        android:textSize="12dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="7dp">
                    <ImageView
                        android:id="@+id/removeItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/invoice_delete_icon"/>

                    <ImageView
                        android:id="@+id/itemEdit"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/invoice_edit_icon"/>
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tvItemAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/invoice_black"
                android:layout_gravity="top"
                android:gravity="center"
                android:fontFamily="@font/lexend_medium"
                android:text="100"
                android:textSize="15dp" />



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/invoice_lite_gray"/>
    </LinearLayout>


</LinearLayout>